#!/bin/bash
refreshRate=.5
d=0
s=0
for ip in "$@"
do
        if [ $d -eq 1 ] ; then
                if [[ $ip =~ ^[0-9]*$ ]] ; then
                	refreshRate=$(echo "$ip / 1000" | bc -l)
		else
			echo "non-integer input"
		fi
		d=0
        fi
        if [ "$ip" == "-d" ] || [ "$ip" == "--delay" ] ; then
		echo "found a d"
                d=1
        fi
        if [ "$ip" == "-s" ] || [ "$ip" == "--start" ] ; then
                s=1
        fi
        if [ "$ip" == "-e" ] || [ "$ip" == "--end" ] ; then
                rm ~/.curDir.txt 2> /dev/null
		echo "autols monitor ended"
		exit 0
        fi
done
if [ $s -eq 0 ] ; then
	echo "nothing done"
        exit 1
fi

if [ $s -eq 1 ] ; then

clear
echo "$HOME" > ~/.curDir.txt
file="$HOME""/.curDir.txt"

while [ -f "$file" ]
do
	#echo "running"
	if [ "$contents" != "$(cat $file)" ]; then
		clear
		echo "$(cat $file)" 
		echo " "
		ls --color=auto "$(cat $file)"
	fi
	contents="$(cat $file)"
	#echo "$file"
	#echo "contents: ""$contents"
	sleep $refreshRate 
done

fi
